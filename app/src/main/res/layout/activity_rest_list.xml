<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rest_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.aram4illinois.wildhacks.RestList">

    <ListView
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:id="@+id/waitlist"
        android:paddingTop="15dp"
        android:paddingRight="0dp"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="24dp"
        android:id="@+id/imageView"
        android:translationY="-430dp"
        android:translationX="25dp" />

    <TextView
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:textSize="16dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="104dp"
        android:layout_marginStart="104dp"
        android:id="@+id/nameHeader"
        android:translationX="-65dp"
        android:translationY="15dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="@string/orderNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:id="@+id/orderNumber"
        android:translationY="15dp"
        android:translationX="-105dp"
        android:textSize="16dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="@string/estimatedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:id="@+id/timeView"
        android:translationX="180dp"
        android:translationY="15dp"
        android:textSize="16dp"
        android:layout_marginTop="15dp" />

</RelativeLayout>
